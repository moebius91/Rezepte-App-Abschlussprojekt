<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/ett_ingr_selection_detail_count"
            android:hint="Menge"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" />

    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/spinner_ingr_selection_detail_unit"
            app:layout_constraintStart_toEndOf="@+id/ett_ingr_selection_detail_count"
            app:layout_constraintTop_toTopOf="@+id/ett_ingr_selection_detail_count"
            app:layout_constraintBottom_toBottomOf="@+id/ett_ingr_selection_detail_count" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ingr_selection_detail_name"
            app:layout_constraintTop_toTopOf="@+id/spinner_ingr_selection_detail_unit"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_ingr_selection_detail_unit"
            app:layout_constraintStart_toEndOf="@+id/spinner_ingr_selection_detail_unit"
            android:layout_marginStart="16dp"
            android:textSize="20sp" />

    <Button
            android:text="Speichern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_ingr_selection_detail_save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_ingr_selection_detail_unit"
            android:layout_marginTop="32dp" />
</androidx.constraintlayout.widget.ConstraintLayout>